#:import RaisedIconButton widgets.RaisedIconButton
#:import IPInput widgets.IPInput
<UsernameField@MDTextField>
<ToggleSoundButton@MDRaisedButton>:
<OutputList@MDList>
<CharacterLabel@MDLabel>
<SendButton@MDIconButton>
<Messenger@MDGridLayout>
<SoundItem>:
    on_release: root.set_icon(check)
    CheckboxLeftWidget:
        id: check
        group: "check"

<OKButton>:
    on_release: app.change_sound()
<InformationItem>:
    icon_chooser: ""
    on_release: self.copy_to_clipboard()
    IconLeftWidget:
        icon: root.icon_chooser


Messenger:
    rows: 7
    cols: 1
    padding: [10]

    MDBoxLayout:
        id: username_frame
        adaptive_height: True
        padding: [0, 5]
        UsernameField:
            id: name_input
            hint_text: "Username:"
            multiline: False
            write_tab: False
            size_hint_x: 0.4
            max_text_length: 9
            # on_parent: self.focus = True
        ToggleSoundButton:
            id: sound_switch
            size_hint_x: 0.3
            text: "Toggle Sound"
            adaptive_width: True
            on_release: app.show_confirmation_dialog()
        MDRaisedButton:
            text: "Toggle Dark Mode"
            size_hint_x: 0.3
            on_release: app.theme_cls.theme_style = "Dark" if app.theme_cls.theme_style == "Light" else "Light"


    MDSeparator:

    MDBoxLayout:
        # size_hint_y: None
        adaptive_height: True
        padding: [0, 5]
        IPInput:
            id: ip_input
            hint_text: "IP Address"
            helper_text: "Invalid IP"
            helper_text_mode: "on_error"
            # mode: "rectangle"
            multiline: False
            write_tab: False
            max_text_length: 15
        RaisedIconButton:
            text: "Port & IP Address"
            on_release: app.show_information_dialog()
            icon: "information-outline"
            icon_color: "black"
            # size_hint_x: 0.1


    MDSeparator:

    ScrollView:
        id: scrolling
        scroll_wheel_distance: 40
        OutputList:
            id: output

    MDSeparator:

    MDBoxLayout:
        id: send_frame
        adaptive_height: True
        size_hint_x: 1
        MessageInput:
            output: output
            username: name_input
            ip_input: ip_input
            scroll_view: scrolling
            id: message_input
            hint_text: "Message"
            max_height: "100dp"
            multiline: True
            max_text_length: 1000
            disabled: (ip_input.text if ip_input.text != "" else "127.0.0.1") not in self.ip_set_for_widget
        SendButton:
            id: send_button
            on_release: message_input.send_message()
            icon: "send"
            theme_icon_color: "Custom"
            icon_color: app.theme_cls.primary_color
